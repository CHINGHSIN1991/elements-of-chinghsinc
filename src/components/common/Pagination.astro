---
import Link from './Link.astro'

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Pages">
  {
    prevUrl && (
      <Link
        text="Previous"
        href={prevUrl}
        style="primary"
        borderVisible
        isFilled
        rel="prev"
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="Next"
        href={nextUrl}
        style="primary"
        borderVisible
        isFilled
        rel="next"
      />
    )
  }
</nav>