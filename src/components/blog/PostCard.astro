---
import Card from "../common/Card.astro";
import { slugify, formatDate } from "../../ts/utils";

const { post } = Astro.props;
const { title, description, date, image, tags, category } = post.data;

const baseUrl = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const withBase = (path: string) => {
  let normalizedPath = path;
  while (normalizedPath.startsWith("/")) {
    normalizedPath = normalizedPath.slice(1);
  }
  return `${baseUrl}${normalizedPath}`;
};

const imageUrl = image?.src || post.data.cover || withBase("assets/images/fallback-image.png");
const imageAlt = image?.alt || title || "文章圖片";
const postUrl = withBase(`blog/${post.id}`);
---

<Card>
  <a slot="image" href={postUrl} class="block overflow-hidden relative">
    <div class="aspect-video overflow-hidden">
      <img
        src={imageUrl}
        alt={imageAlt}
        class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
      />
    </div>

    {category && (
      <span class="absolute top-4 left-4 px-3 py-1 bg-primary/90 text-white text-xs font-medium rounded-full backdrop-blur-sm">
        {category}
      </span>
    )}
  </a>

  <span slot="time">{formatDate(new Date(date))}</span>

  <a slot="title" href={postUrl} class="block">
    <h2 class="text-xl font-bold mb-2 text-gray-900 dark:text-gray-100 group-hover:text-primary transition-colors">
      {title}
    </h2>
  </a>

  <p slot="description" class="text-gray-600 dark:text-gray-300 text-sm line-clamp-2 mb-4">
    {description}
  </p>

  <div slot="actions">
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.slice(0, 3).map((tag: string) => (
          <a href={withBase(`blog/tag/${slugify(tag)}`)} class="text-xs px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
            #{tag}
          </a>
        ))}
      </div>
    )}

    <a
      href={postUrl}
      class="inline-flex items-center px-4 py-2 bg-black dark:bg-white text-white dark:text-black rounded-lg hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors font-medium text-sm"
    >
      閱讀更多
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 ml-1 transition-transform group-hover:translate-x-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        aria-hidden="true"
        focusable="false"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  </div>
</Card>
